<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/selectable_round_corners">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="17dp"
        android:transitionName="avatar"
        app:layout_constraintBottom_toBottomOf="@id/center_guideline_h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/center_guideline_h" />

    <TextView
        android:id="@+id/displayName"
        style="@style/MontserratSemiBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/username"
        style="@style/MontserratRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/displayName"
        app:layout_constraintTop_toBottomOf="@id/displayName"
        tools:text="Johndoe" />

    <TextView
        android:id="@+id/request_status"
        style="@style/MontserratRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/contact_request_pending"
        android:textColor="@color/dash_golden"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/center_guideline_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/center_guideline_h" />

    <ImageView
        android:id="@+id/contact_added"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@id/center_guideline_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/center_guideline_h"
        app:srcCompat="@drawable/ic_contact_added" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/center_guideline_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/center_guideline_h">

        <Button
            android:id="@+id/accept_contact_request"
            style="@style/DashButton.Blue"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/contact_request_accept"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/ignore_contact_request"
            style="@style/DashButton.Gray"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="X"
            app:srcCompat="@drawable/ic_ignore_x" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pending_work_pane"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@color/dash_white"
        android:gravity="center_vertical|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_guideline_v"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pending_work_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:background="@color/dash_white"
            app:srcCompat="@drawable/ic_hourglass"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/pending_work_text"
            style="@style/MontserratRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Accepting" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>
